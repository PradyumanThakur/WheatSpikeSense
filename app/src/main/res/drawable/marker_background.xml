<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/marker_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/purple_700" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Optional shadow -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- Shadow effect (for API levels below 21, use elevation in layout) -->
    <size
        android:elevation="4dp" />
</shape>